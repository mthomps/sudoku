%html
  %head
    %meta#viewport{name: "viewport", width: "initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no"}
    %link{rel: "stylesheet", href: "/stylesheets/sudoku.css", type: "text/css"}
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js", type: "text/javascript"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min.js", type: "text/javascript"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js", type: "text/javascript"}
    %script{src: "/js/dataModel.js", type: "text/javascript"}
    %script{src: "/js/sudoku.js", type: "text/javascript"}
    %script{src: "/js/index.js", type: "text/javascript"}
    %script#board-template{type: "text/x-handlebars-template"}
      :plain
        <h2>Sudoku</h2>
        <table id='sudoku-table'>
          {{#each .}}
            {{> _row}}
          {{/each}}
        </table>
        <a href='#' class='button' id='submit-button'>Submit</a>
    %script#row-template{type: "text/x-handlebars-template"}
      :plain
        <tr data-row={{@index}}>
          {{#each .}}
            {{> _box}}
          {{/each}}
        </tr>
    %script#cell-template{type: "text/x-handlebars-template"}
      :plain
        <td>
          {{#if .}}
            <div class="sudoku-cell prefilled">{{.}}</div>
          {{else}}
            <div class="sudoku-cell"><input maxlength="1" data-column={{@index}}></input></div>
          {{/if}}
        </td>

  %body
    = yield
