%html
  %head
    %link{rel: "stylesheet", href: "/stylesheets/style.css", type: "text/css"}
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js", type: "text/javascript"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min.js", type: "text/javascript"}
    %script{src: "/js/sudoku.js", type: "text/javascript"}
    %script{src: "/js/index.js", type: "text/javascript"}
    %script#board-template{type: "text/x-handlebars-template"}
      :plain
        <h2>Sudoku</h2>
        <table>
          {{#each .}}
            {{> _row}}
          {{/each}}
        </table>
    %script#row-template{type: "text/x-handlebars-template"}
      :plain
        <tr>
          {{#each .}}
            {{> _box}}
          {{/each}}
        </tr>
    %script#cell-template{type: "text/x-handlebars-template"}
      :plain
        <td>
          {{#if .}}
            <div class='prefilled'>{{.}}</div>
          {{else}}
            <div><input></input></div>
          {{/if}}
        </td>

  %body
    = yield
